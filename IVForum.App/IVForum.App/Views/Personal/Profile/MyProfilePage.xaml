<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IVForum.App.Views.Personal.MyProfilePage"
             Title="Perfil"
             BackgroundColor="GhostWhite">
    
    <ContentPage.Content>
        
        <StackLayout Padding="5">

            <Frame HasShadow="True">

                <StackLayout>

                    <Label Text="{Binding Name}" FontSize="Large"></Label>
                    <Label Text="{Binding Email}" FontSize="Default"></Label>
                    <Label Text="Repositori:"></Label>
                    <Label Text="{Binding RepositoryUrl}" FontSize="Default"></Label>

                </StackLayout>

            </Frame>

        </StackLayout>
        
    </ContentPage.Content>
    
</ContentPage>