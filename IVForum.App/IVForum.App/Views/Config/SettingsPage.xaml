<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IVForum.App.Views.Config.SettingsPage"
             Title="Configuració"
             BackgroundColor="GhostWhite">

    <ContentPage.Content>

        <StackLayout Padding="5">

            <Frame HasShadow="True" Padding="0">

                <ListView x:Name="SettingsListView"
                          HasUnevenRows="True"
                          RowHeight="50">

                    <ListView.ItemTemplate>

                        <DataTemplate>

                            <ImageCell ImageSource="book_b.png" Text="{Binding Title}" Detail="Detail text"></ImageCell>

                        </DataTemplate>

                    </ListView.ItemTemplate>

                </ListView>

            </Frame>

            <Button Image="save_b.png" Text="Desa" Clicked="SaveChanges"></Button>

        </StackLayout>

    </ContentPage.Content>
    
</ContentPage>