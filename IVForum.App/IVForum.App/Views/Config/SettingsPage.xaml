             x:Class="IVForum.App.Views.Config.SettingsPage"
             Title="Configuració"
             BackgroundColor="GhostWhite">
    
    <ContentPage.Content>
        
        <StackLayout Padding="5">

            <Frame HasShadow="True">

                <StackLayout>

                    <Button Text="Desa" Clicked="SaveChanges">
