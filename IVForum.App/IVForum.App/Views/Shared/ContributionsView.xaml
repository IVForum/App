<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IVForum.App.Views.Shared.ContributionsView">
  <ContentView.Content>
        <Frame HasShadow="True">

            <StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Image Source="money.png"></Image>
                    <Label Text="Contribucions:" FontSize="Medium"></Label>
                </StackLayout>

                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">

                    <Button Image="banknote.png" Text="20" BackgroundColor="DodgerBlue"></Button>
                    <Button Image="banknote.png" Text="50" BackgroundColor="SandyBrown"></Button>
                    <Button Image="banknote.png" Text="100" BackgroundColor="ForestGreen"></Button>

                </StackLayout>

            </StackLayout>

        </Frame>
    </ContentView.Content>
</ContentView>