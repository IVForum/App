<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IVForum.App.Views.Public.Profile.ProfileDetailPage"
             BackgroundColor="{StaticResource LightBackgroundColor}">
    
    <ContentPage.Content>

        <StackLayout>

            <StackLayout>

                <Frame HasShadow="True" BackgroundColor="{StaticResource Primary}">

                    <StackLayout>

                        <Image Source="avatar_w.png" HorizontalOptions="Center"></Image>

                        <StackLayout HorizontalOptions="CenterAndExpand">

                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                <Label Text="{Binding Name}" FontSize="Medium" TextColor="White"></Label>
                                <Label Text="{Binding Surname}" FontSize="Medium" TextColor="White"></Label>
                            </StackLayout>

                            <Label Text="{Binding Email}" TextColor="White" HorizontalOptions="Center"></Label>
                        </StackLayout>

                    </StackLayout>

                </Frame>

            </StackLayout>

            <ScrollView>

                <StackLayout x:Name="ProfileLayout" Padding="5">


                </StackLayout>

            </ScrollView>

        </StackLayout>

    </ContentPage.Content>
    
</ContentPage>